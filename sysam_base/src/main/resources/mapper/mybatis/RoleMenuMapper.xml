<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxy.sysam_base.dao.RoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="roleMenuMap" type="com.zxy.sysam_base.entity.RoleMenu">
        <id column="id" property="id"/>
        <result column="roleId" property="roleId"/>
        <result column="menuId" property="menuId"/>
        <result column="createtime" property="createtime"/>
        <result column="updatetime" property="updatetime"/>
        <result column="isdel" property="isdel"/>
        <result column="describes" property="describes"/>
        <association property="menu" select="com.zxy.sysam_base.dao.MenuMapper.getMenuById"
                     column="menuId"></association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, roleId, menuId, createtime, updatetime, isdel, describes
    </sql>

    <!--通过角色id查询关联角色菜单信息-->
    <select id="getByRoleId" resultMap="roleMenuMap">
        SELECT * FROM sys_role_menu where roleId = #{id};
    </select>


</mapper>
